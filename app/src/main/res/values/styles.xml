<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <!--- style name="myButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton" -->
    <style name="myButtonStyle" parent="Widget.Material3.Button.OutlinedButton"></style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/buttonLabel</item>
        <item name="rippleColor">@color/material_dynamic_primary80</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/material_dynamic_primary70</item>
    </style>
</resources>
